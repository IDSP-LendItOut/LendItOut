<form action="/posting/create/step/1" method="POST" class="step1-form" id="step1-form">
  <p class="subtitle">Choose a listing type</p>
  <p class="subdescription">Make a selection: One or both option are available</p>

  <div class="checkbox-group">
    <label><input type="checkbox" name="type" value="RENT"> For Renting</label>
    <label><input type="checkbox" name="type" value="PURCHASE"> For Sale</label>
  </div>

  <p class="subtitle">Select a Category</p>
  <p class="subdescription">Choose one optionâ€”this will set your price range limits</p>
  <div class="category-grid">
    <% categories.forEach(category => { %>
    <label class="category-option">
      <input type="radio" name="category" value="<%= category %>">
      <span><%= category.charAt(0) + category.slice(1).toLowerCase().replace(/_/g, ' ') %></span>
    </label>
    <% }) %>
  </div>
  <%if(error) {%>
  <p class="error-msg"><%= error %></p>
  <%}%>
  <button type="submit" class="next-btn" id="posting-next">Next</button>
</form>